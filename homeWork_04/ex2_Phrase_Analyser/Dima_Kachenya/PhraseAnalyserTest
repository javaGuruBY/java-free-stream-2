package com.company;

public class PhraseAnalyserTest {

    public static void check(String actualValue, String expectedValue, String testName) {
        if(actualValue.equals(expectedValue)){
            System.out.println(testName + " has been passed!");
        } else {
            System.out.println(testName + ", has been failed!");
            System.out.println("the actual value = " + actualValue + " is not equal to the expected =" + expectedValue);
        }
    }
    public static void test1()
    {
        String actualValue="It stands no chance";
        String testValue="Make abrakadabra  great again";
        String expectedValue= PhraseAnalyser.analyse(testValue);
        String testName="Test number 1";
        check(actualValue,expectedValue,testName);
    }
    public static void test2()
    {
        String actualValue="It could be worse";
        String expectedValue= PhraseAnalyser.analyse("abrakadabra  great again");
        String testName="Test number 2";
        check(actualValue,expectedValue,testName);
    }
    public static void test3()
    {
        String actualValue="It could be worse";
        String expectedValue= PhraseAnalyser.analyse("Make abrakadabra ");
        String testName="Test number 3";
        check(actualValue,expectedValue,testName);
    }
    public static void test4()
    {
        String actualValue="It is fine, really";
        String expectedValue= PhraseAnalyser.analyse("abrakadabra abrakadabra abrakadabra abrakadabra ");
        String testName="Test number 4";
        check(actualValue,expectedValue,testName);
    }
}
