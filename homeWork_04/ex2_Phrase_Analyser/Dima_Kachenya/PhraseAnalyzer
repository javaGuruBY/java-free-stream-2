package com.company;

public class PhraseAnalyser {
    public  static   String analyse(String text) {
        //"It stands no chance", если строка начинается со слов "Make" и заканчивается на "great again";
        //"It could be worse", если строка начинается со слов "Make" или заканчивается на "great again";
        //"It is fine, really", если строка не подходит под критерии выше;
        String[] words = text.split("\\s"); // Разбиение строки на слова с помощью разграничителя (пробел)
        if(words[0].toUpperCase().equals( "MAKE") && words[words.length-1].toUpperCase().equals("AGAIN")&& words[words.length-2].toUpperCase().equals("GREAT"))
            return "It stands no chance";
        else if(words[0].toUpperCase().equals( "MAKE") || (words[words.length-1].toUpperCase().equals("AGAIN")&& words[words.length-2].toUpperCase().equals("GREAT")))
            return "It could be worse";
        else
           return "It is fine, really";
    }
}

