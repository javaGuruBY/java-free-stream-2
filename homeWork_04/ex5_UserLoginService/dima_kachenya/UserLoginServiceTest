
package com.company;

public class UserLoginServerTest {
    private static void check(boolean actualValue, boolean expectedValue, String testName) {
        if(actualValue == expectedValue){
            System.out.println(testName + " has been passed!");
        } else {
            System.out.println(testName + ", has been failed!");
            System.out.println("the actual value = " + actualValue + " is not equal to the expected =" + expectedValue);
        }
    }

    public static void test1() {
        boolean actulValue=false;
        User kachenya2015=new User("kachenya2015", "12345678");
        UserLoginService.login(kachenya2015, "12");
        UserLoginService.login(kachenya2015, "12");
        UserLoginService.login(kachenya2015, "12");
        boolean expectedValue=UserLoginService.login(kachenya2015, "12");
        String testName="Test 1";
        check(actulValue, expectedValue, testName);


    }
}
